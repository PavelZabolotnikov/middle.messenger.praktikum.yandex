<div class="user-info__row">
<label for="{{name}}" class="input__title">{{inputName}}</label>

<input id='{{name}}' type="{{type}}" class="input" value="{{value}}" name="{{name}}" placeholder="{{placeholder}}" {{#if disabled}}disabled{{/if}} autocomplete="off">
<span class="profile__input-error" name="{{name}}">{{errorMessage}}</span>
</div>
