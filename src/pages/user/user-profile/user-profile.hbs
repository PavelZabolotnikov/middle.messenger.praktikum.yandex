<div class='profile'>
  <div class='profile-return'>
    {{{ArrowButton}}}
  </div>
<section class='content'>
    <div class='avatar avatar__edit'>
        {{{ProfileAvatar}}}
      </div>
      {{{UserTitle}}}
      <ul class='list'>
        {{{UserEmailInput}}}
        {{{UserLoginInput}}}
        {{{UserFirstNameInput}}}
        {{{UserSecondNameInput}}}
        {{{UserDisplayNameInput}}}
        {{{UserPhoneInput}}}
      </ul>
      <div class='buttons__links'>
        {{{UserInfoChange}}}
        {{{UserPasswordChange}}}
        {{{Exit}}}
  </div>
</section>
</div>
