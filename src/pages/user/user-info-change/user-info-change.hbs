<section class="content">
  {{#with (userInfo)}}
  <h2>{{first_name}}</h2>
  {{/with}}
  {{#with (userInfo)}}
  <form class="list">
    {{> UserInput inputName='Почта' type="text" value=email name=email }}
    {{> UserInput inputName='Логин' type="text" value=login name=login }}
    {{> UserInput inputName='Имя' type="text" value=first_name name=first_name }}
